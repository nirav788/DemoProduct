<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.demoproduct.com.Activity.MainActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <app.demoproduct.com.Utills.CustomTextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Demo Application"
                    android:textColor="@color/icons"
                    android:textSize="@dimen/_20sdp"
                    app:typeface="pm.ttf" />


                <app.demoproduct.com.Utills.CustomTextView
                    android:id="@+id/tv_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="left"
                    android:text="Login"
                    android:textColor="@color/icons"
                    android:textSize="@dimen/_20sdp"
                    app:typeface="psb.ttf" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <app.demoproduct.com.Utills.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don\'t have an account?"
                        android:textColor="@color/icons"
                        android:textSize="14sp"
                        app:typeface="pr.ttf" />

                    <app.demoproduct.com.Utills.CustomTextView
                        android:id="@+id/signUpForFreeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/signup_for_free"
                        android:textColor="@color/icons"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:typeface="psb.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">

                    <app.demoproduct.com.Utills.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Mobile Number "
                        android:textColor="@color/icons"
                        android:textStyle="bold"
                        app:typeface="pr.ttf" />

                    <app.demoproduct.com.Utills.CustomEditTextView
                        android:id="@+id/signin_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Enter your mobile number "
                        android:inputType="textEmailAddress"
                        app:typeface="pr.ttf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/icons" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">

                    <app.demoproduct.com.Utills.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Password"
                        android:textColor="@color/icons"
                        android:textStyle="bold"
                        app:typeface="pr.ttf" />

                    <app.demoproduct.com.Utills.CustomEditTextView
                        android:id="@+id/signin_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent"
                        android:hint="Enter your password"
                        android:inputType="textPassword"
                        android:paddingLeft="0dp"
                        app:typeface="pr.ttf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/icons" />


                    <app.demoproduct.com.Utills.CustomTextView
                        android:id="@+id/tv_forgotPWD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/forget_password"
                        android:textColor="@color/icons"
                        android:textStyle="bold"
                        app:typeface="pr.ttf" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/loginSubmitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:background="@drawable/button_background"
                    android:padding="10dp">

                    <app.demoproduct.com.Utills.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/login_Now"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp"
                        app:typeface="psb.ttf" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
        s

    </android.support.v7.widget.CardView>
</LinearLayout>